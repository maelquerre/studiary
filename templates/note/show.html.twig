{% extends 'layouts/page.twig' %}

<title>Note</title>

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ note.value }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ note.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ note.date ? note.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('notes_index') }}">Back to the list</a>

    <a href="{{ path('note_edit', {'id': note.id}) }}">Edit</a>

    {{ include('note/_delete_form.html.twig') }}
{% endblock %}
