{% extends 'layouts/page.twig' %}

{% block body %}
    <div class="container pt-8">
        <h1 class="large-title mb-4">Note</h1>

        <table class="table max-w-sm mb-4">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ note.value }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ note.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ note.date ? note.date|date('Y-m-d') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-black" href="{{ path('notes_edit', {'id': note.id}) }}">Edit</a>
        <a class="btn btn-outline ml-2" href="{{ path('notes_index') }}">Back to the list</a>

        {{ include('notes/_delete_form.html.twig') }}
    </div>
{% endblock %}
